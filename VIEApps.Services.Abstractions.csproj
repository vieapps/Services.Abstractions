<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
		<RootNamespace>net.vieapps.Services</RootNamespace>
		<AssemblyName>VIEApps.Services.Abstractions</AssemblyName>
		<WarningLevel>3</WarningLevel>
		<DocumentationFile>bin\$(Configuration)\$(TargetFramework)\VIEApps.Services.Abstractions.xml</DocumentationFile>
		<AssemblyTitle>VIEApps NGX Abstractions</AssemblyTitle>
		<AssemblyVersion>10.3.1907.1</AssemblyVersion>
		<FileVersion>10.3.1907.1</FileVersion>
		<InformationalVersion>10.3-$(TargetFramework)-build:03-3:03+multiple.targets</InformationalVersion>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<PackageId>VIEApps.Services.Abstractions</PackageId>
		<Version>10.3.1907.1-preview</Version>
		<Title>VIEApps NGX Service Abstractions</Title>
		<Description>The abstractions for all microservices in the VIEApps NGX</Description>
		<Authors>VIEApps.net</Authors>
		<Company>VIEApps.net</Company>
		<Product>VIEApps NGX</Product>
		<Copyright>© 2019 VIEApps.net</Copyright>
		<PackageLicense>LICENSE.md</PackageLicense>
		<PackageOutputPath>..\..\Components</PackageOutputPath>
		<PackageTags>services;microservices;vieapps;vieapps.components;vieapps.services;vieapps.microservices</PackageTags>
		<PackageReleaseNotes>Support .NET Standard 2.1</PackageReleaseNotes>
		<PackageProjectUrl>https://vieapps.net/</PackageProjectUrl>
		<PackageIconUrl>https://github.com/vieapps/Components.Utility/raw/master/logo.png</PackageIconUrl>
		<RepositoryUrl>https://github.com/vieapps/Services.Abstractions</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
	</PropertyGroup>

	<ItemGroup>
		<None Remove=".DS_Store" />
		<None Remove=".gitattributes" />
		<None Remove=".gitignore" />
		<None Remove="LICENSE.md" />
		<None Remove="README.md" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Castle.Core" Version="4.4.0" />
		<PackageReference Include="MsgPack.Cli" Version="1.0.1" />
		<PackageReference Include="VIEApps.Components.Security" Version="10.3.1907.1-preview" />
		<PackageReference Include="VIEApps.Components.Utility" Version="10.3.1907.1-preview" />
		<PackageReference Include="WampSharp.Default.Client" Version="19.3.1" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
		<PackageReference Include="System.Reactive" Version="4.1.5" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
		<PackageReference Include="System.Reactive" Version="4.2.0-preview.566" />
	</ItemGroup>

</Project>